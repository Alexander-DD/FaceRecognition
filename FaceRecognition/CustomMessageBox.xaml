<Window x:Class="FaceRecognition.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Height="100" Width="360" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock TextWrapping="Wrap" Text="Обработка завершена. Результаты сохранены в папке 'result'." Margin="0,0,0,10" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OpenFolderButton" Content="Открыть папку" Click="OpenFolderButton_Click" Margin="0,0,10,0" Height="31" Width="137" />
            <Button Name="OkButton" Content="ОК" Click="OkButton_Click" Width="43" />
        </StackPanel>
    </StackPanel>
</Window>